#Apps
super + Return
  alacritty

super + @p
  rofi -show

# personal browser
super + @a
  flatpak run org.mozilla.firefox

# development browser
super + @d
  chromium

#Screenshot
Print
  flameshot gui

#Powermenu
super + @o
  powermenu

#Workspaces
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'paces 

super + shift + e
  bspc quit

super + shift + r
  bspc wm -r

#Hardware
XF86AudioRaiseVolume 
  pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume 
  pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86MonBrightnessUp
  xbacklight +5
XF86MonBrightnessDown
  xbacklight -5

#Keyboard Management
super + k
  keyboard-layout us
super + shift + k
  keyboard-layout us intl

#Window Management
super + Tab
  bspc node -t {floating,tiled}

super + q
  bspc node -{c,k}

alt + Tab
  bspc node -f next.local.!hidden.window

super + {Up,Down,Left,Right}
  {bspc node -z top 10 10; bspc node -z bottom -10 -10, bspc node -z bottom 10 10; bspc node -z top -10 -10, bspc node -z left 10 10; bspc node -z right -10 -10, bspc node -z right 10 10; bspc node -z left -10 -10 }

super + shift + {Up,Down,Left,Right}
  bspc node -v {0 -10,0 10,-10 0,10 0}

super + space
  bspc node -t \~fullscreen

super + m 
  bspc desktop -l next
