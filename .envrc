validate() {
  if [ ! -d .git ]; then
    echo "error: must be run from git root directory"
    exit 1
  fi

  if [ -z "$1" ]; then
    echo "error: must specify target"
    exit 1
  fi
}

nixos_switch() {
  validate

  local target=".#$1"
  local mode="$2"

  if [ "$mode" = "debug" ]; then
    nixos-rebuild switch --use-remote-sudo --flake "$target" --show-trace --verbose
  else
    nixos-rebuild switch --use-remote-sudo --flake "$target"
  fi
}

nixos_build() {
  validate

  local target=".#$1"
  local mode="$2"

  if [ "$mode" = "debug" ]; then
    nix build "$target" --extra-experimental-features "nix-command flakes" --show-trace --verbose
  else
    nix build "$target" --extra-experimental-features "nix-command flakes"
  fi
}

export_function() {
  local name=$1
  local alias_dir=$PWD/.direnv/aliases
  mkdir -p "$alias_dir"
  PATH_add "$alias_dir"
  local target="$alias_dir/$name"
  if declare -f "$name" >/dev/null; then
    echo "#!$SHELL" > "$target"
    declare -f "$name" >> "$target"
    echo "$name \"\$@\"" >> "$target"
    chmod +x "$target"
  fi
}

export_function nixos_switch
export_function nixos_build

if [ -z "$(command -v git)" -o -z "$(command -v just)" ]; then
  nix shell nixpkgs#git nixpkgs#just nixpkgs#neovim
fi
