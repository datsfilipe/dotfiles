use flake

nixos_switch() {
  local target=".#$1"
  local mode="$2"

  if [ "$mode" = "debug" ]; then
    nixos-rebuild switch --flake "$target" --show-trace --verbose
  elif [ "$mode" = "update" ]; then
    nixos-rebuild switch --recreate-lock-file --flake "$target"
  else
    nixos-rebuild switch --flake "$target"
  fi
}

nixos_build() {
  local target=".#$1"
  local mode="$2"

  if [ "$mode" = "debug" ]; then
    nixos-rebuild test --flake "$target" --show-trace --verbose
  else
    nixos-rebuild test --flake "$target" --show-trace --verbose
  fi
}

export_function() {
  local name=$1
  local alias_dir=$PWD/.direnv/aliases
  mkdir -p "$alias_dir"
  PATH_add "$alias_dir"
  local target="$alias_dir/$name"
  if declare -f "$name" >/dev/null; then
    echo "#!$SHELL" > "$target"
    declare -f "$name" >> "$target"
    echo "$name \"\$@\"" >> "$target"
    chmod +x "$target"
  fi
}

export_function nixos_switch
export_function nixos_build
